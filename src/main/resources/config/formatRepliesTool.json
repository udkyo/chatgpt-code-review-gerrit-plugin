{
  "type": "function",
  "function": {
    "name": "format_replies",
    "description": "Provide the PatchSet review replies.",
    "parameters": {
      "type": "object",
      "properties": {
        "replies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "reply": {
                "type": "string"
              },
              "score": {
                "type": "integer"
              },
              "relevance": {
                "type": "number"
              },
              "repeated": {
                "type": "boolean"
              },
              "conflicting": {
                "type": "boolean"
              },
              "filename": {
                "type": "string"
              },
              "lineNumber": {
                "type": "integer"
              },
              "codeSnippet": {
                "type": "string"
              }
            },
            "required": [
              "reply"
            ]
          }
        },
        "changeId": {
          "type": "string"
        }
      },
      "required": [
        "replies",
        "changeId"
      ]
    }
  }
}
